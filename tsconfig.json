{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "outDir": "dist",
      "allowJs": false,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  